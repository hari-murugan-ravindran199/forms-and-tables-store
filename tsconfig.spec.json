/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/spec",
    "types": [
      "jest"
    ],
    "module": "commonjs",    // Ensure Jest uses CommonJS modules
    "esModuleInterop": true, // For better compatibility with ES6 imports
    "skipLibCheck": true,    // Skip type checking of declaration files for speed
    "strict": true
  },
  "files": [
    "src/test.ts",
    "src/polyfills.ts"
  ],
  "include": [
    "src/**/*.spec.ts",
    "src/**/*.d.ts"
  ]
}
